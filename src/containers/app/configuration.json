{
  "name": "Demo",
  "form": [
    {
      "type": "Infobox",
      "configuration": {
        "id": "welcomeMessage",
        "message": "Welcome to the first iteration of the form builder!"
      }
    },
    {
      "type": "Textbox",
      "configuration": {
        "id": "username",
        "label": "First name"
      }
    },
    {
      "type": "Textbox",
      "configuration": {
        "id": "lastname",
        "label": "Last name"
      }
    },
    {
      "type": "Dropdown",
      "configuration": {
        "id": "profession",
        "label": "Profession",
        "options": [
          {
            "value": "None",
            "label": "None"
          },
          {
            "value": "Architect",
            "label": "Architect"
          },
          {
            "value": "Designer",
            "label": "Designer"
          },
          {
            "value": "Economist",
            "label": "Economist"
          },
          {
            "value": "Developer",
            "label": "Developer"
          }
        ]
      }
    },
    {
      "type": "Dropdown",
      "configuration": {
        "id": "developer_type",
        "label": "Developer Type",
        "options": [
          {
            "value": "None",
            "label": "None"
          },
          {
            "value": "Data Scientist",
            "label": "Data Scientist"
          },
          {
            "value": "DevOps Engineer",
            "label": "DevOps Engineer"
          },
          {
            "value": "SecOps Engineer",
            "label": "SecOps Engineer"
          },
          {
            "value": "Software Engineer",
            "label": "Software Engineer"
          }
        ]
      },
      "depends": {
        "node": "profession",
        "condition": "EQUALS",
        "value": "Developer"
      }
    },
    {
      "type": "Numeric",
      "configuration": {
        "id": "age",
        "label": "Age"
      }
    },
    {
      "type": "Infobox",
      "configuration": {
        "id": "greaterThanMessage",
        "message": "Wow you are old!"
      },
      "depends": {
        "node": "age",
        "condition": "GREATER THAN",
        "value": 30
      }
    },
    {
      "type": "Infobox",
      "configuration": {
        "id": "lessThanMessage",
        "message": "Wow you are young!"
      },
      "depends": {
        "node": "age",
        "condition": "LESS THAN",
        "value": 30
      }
    },
    {
      "type": "Textbox",
      "configuration": {
        "id": "pizza",
        "label": "Pizza toppings"
      }
    },
    {
      "type": "Infobox",
      "configuration": {
        "id": "includeMessage",
        "message": "Not pizza!"
      },
      "depends": {
        "node": "pizza",
        "condition": "INCLUDES",
        "value": "pineapple"
      }
    },
    {
      "type": "Infobox",
      "configuration": {
        "id": "excludeMessage",
        "message": "Yummy!"
      },
      "depends": {
        "node": "pizza",
        "condition": "EXCLUDES",
        "value": "pineapple"
      }
    }
  ]
}